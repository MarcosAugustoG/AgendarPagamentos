@model Teste5b5.Entities.Pagamento
@{

    ViewBag.Title = "Home Page";
}
<br />
<div class="row">
    <div class="col-sm-8 col-sm-offset-2">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">Agendamento de Pagamentos</h3>
            </div>
            <div class="panel-body">
                @using (Html.BeginForm("NovoPagamento", "Home", FormMethod.Post, new { @class = "form-horizontal", @id = "formCadastro" }))
                {
                    <div class="form-group">
                        <label class="control-label col-sm-4" for="txtNome">Nome</label>
                        <div class="col-sm-5">
                            @Html.TextBoxFor(x => x.Nome, new { @class = "form-control required", @id = "txtNome" })
                        </div>
                    </div>
                    <div class="form-group">
                        <label class=" control-label col-sm-4" for="txtValor">Valor</label>
                        <div class="col-sm-5">
                            @Html.TextBoxFor(x => x.Valor, new { @class = "form-control required", @id = "txtValor", @name = "txtValor", @type = "text" })
                        </div>
                        <span id="errmsg"></span>
                    </div>
                    <div class="form-group">
                        <label class=" control-label col-sm-4" for="txtData">Data</label>
                        <div class="col-sm-5">
                            @Html.TextBoxFor(x => x.Data, new { @class = "form-control required", @id = "txtData" })
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-sm-9 col-sm-offset-4">
                            <button class="btn btn-default" id="btnCadastrar">Cadastrar</button>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
@section scripts{
    <script src="~/Scripts/Pagamento/index.js"></script>
    <script src="~/Scripts/bootbox.js"></script>
}
